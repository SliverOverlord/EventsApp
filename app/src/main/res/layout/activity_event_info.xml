<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.EventInfoActivity"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar1">

    </include>

    <ImageView
        android:id="@+id/detailsImage"
        android:layout_width="match_parent"
        android:layout_height="330dp" />

    <TextView
        android:id="@+id/eventDetailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textpadding20"
        android:paddingTop="@dimen/textPadding10dp"
        android:paddingRight="@dimen/textpadding20"
        android:paddingBottom="@dimen/textPadding10dp"
        android:text="@string/eventTitle"
        android:textSize="@dimen/size20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventDetailDateT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textpadding20"
        android:paddingRight="@dimen/textpadding20"
        android:text="@string/defDate" />

    <TextView
        android:id="@+id/eventDetailsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textpadding20"
        android:paddingTop="@dimen/textPadding10dp"
        android:paddingRight="@dimen/textpadding20"
        android:paddingBottom="@dimen/textPadding10dp"
        android:text="@string/description"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/eventDetailsLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/textpadding20"
        android:paddingRight="@dimen/textpadding20"
        android:text="@string/location"
        android:textColor="@color/EventBlue" />

    <TextView
        android:id="@+id/eventDetailsSpeakers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textpadding20"
        android:text="@string/speaker" />

</LinearLayout>
</ScrollView>